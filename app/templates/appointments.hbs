{{#paper-toolbar}}
<div class="md-toolbar-tools">
  <h2>
    {{#paper-sidenav-toggle class="menu-sidenav-toggle"}}
      {{paper-icon icon="menu"}}
    {{/paper-sidenav-toggle}}
    Appointments
  </h2>
</div>
{{/paper-toolbar}}

{{#paper-content}}
  <div class="container">
    {{#each specializationsOrAppointments as |item|}}
      <div class="home-card">
      {{#paper-card}}
        {{#paper-toolbar}}
          <div class="md-toolbar-tools">
            <h2 flex=true>
              {{item.title}}
            </h2>
            {{#if addButtonNeeded}}
              {{#paper-button classNames="md-icon-button" action="addButton"}}
                {{paper-icon icon="add"}}
              {{/paper-button}}
            {{/if}}
          </div>
        {{/paper-toolbar}}
        {{#paper-card-content}}
          <p>
            {{#if addButtonNeeded}}
              {{item.content}}
            {{else}}
              Patient: {{item.patient}} <br>
              Date: {{item.date}} {{item.time}} <br>
              {{item.content}}
            {{/if}}
          </p>
        {{/paper-card-content}}
      {{/paper-card}}
      </div>
    {{/each}}
  </div>
{{/paper-content}}
